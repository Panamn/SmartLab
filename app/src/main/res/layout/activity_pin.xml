<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="20dp">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_pin"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_pin_text"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:id="@+id/pinIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/subtitleTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pin_indicator_empty"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pin_indicator_empty"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pin_indicator_empty"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/dot4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pin_indicator_empty"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/pinIndicators"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn1"
                style="@style/PinButton"
                android:gravity="center"
                android:text="1"/>

            <Button
                android:id="@+id/btn2"
                style="@style/PinButton"
                android:gravity="center"
                android:text="2"/>

            <Button
                android:id="@+id/btn3"
                style="@style/PinButton"
                android:gravity="center"
                android:text="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn4"
                style="@style/PinButton"
                android:gravity="center"
                android:text="4"/>

            <Button
                android:id="@+id/btn5"
                style="@style/PinButton"
                android:gravity="center"
                android:text="5"/>

            <Button
                android:id="@+id/btn6"
                style="@style/PinButton"
                android:gravity="center"
                android:text="6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn7"
                style="@style/PinButton"
                android:gravity="center"
                android:text="7"/>

            <Button
                android:id="@+id/btn8"
                style="@style/PinButton"
                android:gravity="center"
                android:text="8"/>

            <Button
                android:id="@+id/btn9"
                style="@style/PinButton"
                android:gravity="center"
                android:text="9"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="@style/PinButton"
            android:background="@color/white"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn0"
            style="@style/PinButton"
            android:gravity="center"
            android:text="0"/>

        <Button
            android:id="@+id/btnDelete"
            style="@style/PinButton"
            android:gravity="center"
            android:text="âœ•"/>
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>