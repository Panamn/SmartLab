<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/BlackItemStyle"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/imageDoctors"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/line1"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="4dp">
        <ImageView
            android:id="@+id/imageDoctorsView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
           />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/imageDoctors"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Петров Владимир"/>
        <TextView
            android:id="@+id/specializationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:text="Хирург"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/imageDoctors"
        app:layout_constraintTop_toBottomOf="@id/line1">
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="1800 ₽"/>
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/text_item_button_sign_up"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            style="@style/BlueButtonStyle"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>