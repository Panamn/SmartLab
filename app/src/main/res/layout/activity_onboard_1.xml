<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="40dp"
    android:paddingBottom="20dp">
    <Button
        android:id="@+id/ButtonSkip"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/skip"
        android:gravity="left|center"
        android:textSize="15sp"
        android:textColor="@color/blue_onboard"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_plus_onboard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/TextViewAnalyzes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/analyzes"
        android:textSize="26sp"
        android:layout_marginBottom="100dp"
        android:textColor="@color/green_onboard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_onboard_1"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewAnalyzes"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewAnalyzes">
        <ImageButton
            android:id="@+id/button_onboard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ellipse_onboard_1"
            android:layout_margin="5dp"
            />
        <ImageButton
            android:id="@+id/button_onboard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ellipse_onboard_2"
            android:layout_margin="5dp"
            />
        <ImageButton
            android:id="@+id/button_onboard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ellipse_onboard_2"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/colb_onboard_1"
        android:layout_marginBottom="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>