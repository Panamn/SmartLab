<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            android:layout_marginTop="10dp"
            app:cardElevation="4dp">
        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/brock"
            />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <ImageButton
        android:id="@+id/buttonNotification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="@string/text_item_button_sign_up"
        android:textSize="16sp"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:src="@drawable/notification"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="@color/blue_profile"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/cardButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:gravity="left|center"
            style="@style/BlueButtonProfile"
            android:text="@string/text_profile_medical_card"
            />
        <Button

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:gravity="left|center"
            style="@style/BlueButtonProfile"
            android:text="@string/text_profile_analysis_results"
            />
        <Button
            android:id="@+id/recordsDoctorsButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:gravity="left|center"
            style="@style/BlueButtonProfile"
            android:text="@string/text_profile_make_an_appointment"
            />
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:gravity="left|center"
            style="@style/BlueButtonStyle"
            android:text="@string/text_profile_delivery_addresses"
            />
        <Button
            android:id="@+id/buttonExitSession"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:gravity="left|center"
            style="@style/BlueButtonProfile"
            android:text="Выход"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/custom_menu" />
</RelativeLayout>